<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/search_back"
    tools:context=".kafic">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollKafic"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:stretchColumns="1">
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:padding="20dp"
        android:layout_marginTop="30dp"
android:layout_gravity="center"
        android:background="@drawable/image_backgroud"
        android:id="@+id/slikaLokala"
        />

    <TextView
        android:id="@+id/imeKafica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ime"
android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/vrstaKafica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ime"
        android:layout_marginTop="5dp"
        android:textColor="#BABABA"
        android:textSize="20sp"
        android:textStyle="bold" />

            <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
                android:layout_height="250dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"

                >
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"

        app:mapbox_renderTextureMode="true"
        />
    </androidx.cardview.widget.CardView >
            <Button
                android:id="@+id/rezervacije"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REZERVIŠI"
                android:textStyle="bold"
                android:textSize="23sp"
                android:paddingHorizontal="100dp"
                android:paddingVertical="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:background="@drawable/login_dugme"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_marginVertical="15dp"
                />



        <LinearLayout
            android:layout_marginHorizontal="20dp"
android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:background="@drawable/senka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_maps_and_flags"


                />
            <TextView
                android:id="@+id/adresa"
                android:text="Cara Nikolaja II 75"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:background="@drawable/senka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_baseline_access_time_24"


                    />
                <TextView
                    android:id="@+id/vremePr"
                    android:text="Otvoreno"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7EDF0E"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vreme"
                    android:text="Cara Nikolaja II 75"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:background="@drawable/senka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/telefon"


                    />

                <TextView
                    android:id="@+id/telefon"
                    android:text="+38165341555"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:background="@drawable/senka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_baseline_credit_card_24"


                    />
                <TextView
                    android:text="Plaćanje karticom"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/kartica"
                    android:text="Da"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7EDF0E"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:background="@drawable/senka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_baseline_smoking_rooms_24"


                    />
                <TextView
                    android:text="Dozvoljeno pušenje"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pusenje"
                    android:text="Da"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7EDF0E"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:background="@drawable/senka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_hookah"


                    />
                <TextView
                    android:text="Shisha bar"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sisa"
                    android:text="Da"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7EDF0E"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:padding="15dp"
                android:background="@drawable/senka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_tree"


                    />
                <TextView
                    android:text="Bašta"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/basta"
                    android:text="Da"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7EDF0E"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/back"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/lista_kafica_pozadina"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
        />

</RelativeLayout>